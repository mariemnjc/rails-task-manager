<h1> My Tasks list </h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %>, <%= link_to "Edit", edit_task_path(task) %>,
  <%= link_to "Delete", tasks_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
  <% end %>
</ul>
<p><%= link_to "Add a task", new_task_path %></p>
